<% if @errors %>
		<ul>
		<% @errors.each do |error| %>
			<li><%= error %></li>
		<% end %>
		</ul>
	<% end %>
	<%= form_tag sessions_path do %>
		<p><%= label_tag :username %></p>
		<p><%= text_field_tag :username %></p>
		<p><%= label_tag :password %></p>
		<p><%= password_field_tag :password %></p>
		<p><%= submit_tag "Login" %></p>
	<% end %>


    <p>Need an account? Create one <%= link_to "here", new_user_path %></p>