<h1>Personal Profile for: <%= @user.username %> </h1>
<% if @current_user %>
    <em>Logged in as: <%=@current_user.username%></em>
<% end %>
<hr>

<% if can_i_edit? %>
<h2>Hello, <%= @user.name %>!</h2>

<h4>Profile Details:</h4>
    <ul>
    <li>Name: <%= @user.name%></li>
    <li>Username: <%= @user.username%></li>
    <% if @user.location %>
        <li>Location: <%= @user.location%></li>
    <% end %>
    </ul>
<%= link_to "Edit my page", edit_user_path%>
<% end %>

<h3>Plants I've Created</h3>
    <ul>
    <% @user.plants.each do |plant| %>
        <li><%= plant.name %> <%= link_to image_tag(plant.img_url, alt: plant.name, size:'200'), plant_path(plant) %></li>
    <% end %>
    </ul>

<h3>My Favorite Plants</h3>
    <ul>
    <% @user.favorite_plants.each do |faveplant| %>
        <li><%= faveplant.name %><%= link_to image_tag(faveplant.img_url, alt: faveplant.name, size:'200'), plant_path(faveplant)%></li>
    <% end %>
    </ul>

<h3>My Activity Log</h3>
<ol>
        <% @user.most_recent_comments.each do |comment| %>
            <li>Commented : <%= link_to(comment.title, plant_path(comment.plant))%> on <%=comment.plant.name%></li>
        <%end%>
</ol>

<% if logged_in? %>
<%= button_to "Logout", "/sessions/destroy", method: :delete%>
<%else %>
<%= button_to "Login", "/sessions/new", method: :get %>
<%end%>
